%!PS-Adobe-2.0 EPSF-2.0
%%BoundingBox: 0 0 315 60
%%BeginProlog
/u 10 def % unit: 0.5 cm
/lw1 1 u div def 
/lw2 0.7 u div def  
/f1 {/Times-Roman findfont 8 u div scalefont setfont} bind def
/f2 {/Times-Italic findfont 8 u div scalefont setfont} bind def
/n 3000 def % number of line segments
/dt 0.01 def
/mu 0.8 def
%%EndProlog
%%%%%%%%% x(t) and y(t) vs. t
10 30 translate
u dup scale
lw2 setlinewidth
2 setlinejoin
%%%%% draw axes
newpath
-.1 0 moveto
n dt mul 0.2 add 0 lineto
0 -2.6 moveto
0 2.6 lineto
0 1 n dt mul floor cvi { /i exch def
  i 0 moveto 0 0.1 rlineto
} for
-2 1 2 { /i exch def
  0 i moveto 0.1 0 rlineto
} for
9.15 -0.7 moveto f1 (10) show
19.7 -0.7 moveto f1 (20) show
24.6 -0.7 moveto f1 (25) show
-0.8 -2.25 moveto f1 (-2) show
-0.8 -1.3 moveto f1 (-1) show
-0.5 -0.3 moveto f1 (0) show
-0.5  0.75 moveto f1 (1) show
-0.5  1.75 moveto f1 (2) show
29 -0.7 moveto f2 (t) show
stroke
%%%%% approximation of x(t) and y(t)
newpath 
lw1 setlinewidth
1 0 0 setrgbcolor
/t 0 def
/x 0 def /y 0.1 def 
0 y moveto % initial position
n {
  /x' y def % x' = y, y'=-x+mu*(1-x^2)*y   
  /y' x neg mu 1 x x mul sub mul y mul add def 
  /x x x' dt mul add def
  /y y y' dt mul add def
  /t t dt add def
  t y lineto 
} repeat
12 1.5 moveto /f2 (y) show
stroke
newpath 
lw1 setlinewidth
0 0 1 setrgbcolor
/t 0 def
/x 0 def /y 0.1 def 
0 y moveto % initial position
n {
  /x' y def % x' = y, y'=-x+mu*(1-x^2)*y   
  /y' x neg mu 1 x x mul sub mul y mul add def 
  /x x x' dt mul add def
  /y y y' dt mul add def
  /t t dt add def
  t x lineto 
} repeat
13 -1 moveto /f2 (x) show
stroke
showpage
%%EOF